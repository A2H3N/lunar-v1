---
const { games } = Astro.props;
import { Image } from 'astro:assets';

type Asset = {
  name: string;
  description: string;
  image: string;
  error: string;
  say: string;
};
---

<div class="flex flex-wrap gap-6 p-4 overflow-x-auto sm:overflow-x-hidden">
  {
    games.length === 0 ? (
      <p class="text-center text-gray-500">No Assets found...</p>
    ) : (
      games.map((game: Asset) => (
        <button
          id="data-2"
          data-json={JSON.stringify(game)}
          class="mt-16 relative group cursor-pointer transition-all w-36 transform overflow-visible"
        >
          <div class="relative">
            <Image
              loading="lazy"
              src={game.image}
              alt={game.name}
              width={140}
              height={140}
              class="h-36 aspect-square object-cover rounded-md transition-all duration-150 group-hover:scale-105 group-hover:blur-sm"
            />
            <div class="absolute inset-0 bg-black/20 opacity-0 group-hover:opacity-100 rounded-md transition-opacity duration-150" />
          </div>
          <div class="absolute bottom-0 left-0 w-full p-2 text-white text-center opacity-0 group-hover:opacity-100 text-lg font-semibold font-poppins tracking-wide drop-shadow-md overflow-visible">
            <div class="text-center font-semibold text-base">{game.name}</div>
          </div>
        </button>
      ))
    )
  }
</div>

