---
import { ShieldAlert } from "lucide-astro";
import Main from "../layouts/main.astro";
---

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width" />
  <meta name="generator" content={Astro.generator} />
  <script src="../utils/global.ts"></script>
</head>
<Main>
  <body>
    <div
      class="flex items-center text-center justify-cente`1r min-h-screen mt-6"
    >
      <div
        class="flex flex-col items-center justify-center text-center min-h-screen mt-6"
      >
        <ShieldAlert class="mb-8 h-32 w-32" />
        <h1 class="text-white text-4xl font-bold">404 Error</h1>
        <p class="mb-8 text-2xl text-white">
          Unable to find the page you were looking for.
        </p>
        <button
          class="pl-12 pr-12 p-4 shadow-lg h-[50px] border border-gray-800 w-full text-white rounded-full bg-gray-800"
          onclick='window.location.href="./"'>Back Home</button
        >
      </div>
    </div>
  </body>
</Main>
